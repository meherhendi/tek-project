{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Attach to Chrome, with sourcemaps",
          "type": "chrome",
          "userDataDir": "${workspaceFolder}/.vscode/chrome",
          "request": "attach",
          "port": 9222,
          "sourceMaps": true,
          "webRoot": "${workspaceRoot}/src", //"${workspaceRoot}/src/app",
          "skipFiles": ["./node_modules/**"],
          "url": "http://localhost:4200/",
          "sourceMapPathOverrides": {
            "webpack:/*": "${webRoot}/*",
            "/./*": "${webRoot}/*",
            "/src/*": "${webRoot}/*",
            "/*": "*",
            "/./~/*": "${webRoot}/node_modules/*"
            //"webpack://*": "/*"

            // "webpack:/*": "${webRoot}/*" ,
            // "webpack:/./*": "${webRoot}/*",
            // "webpack:/src/*": "${webRoot}/src/*",
            // "webpack:/*": "*",
            // "webpack:/./~/*": "${webRoot}/node_modules/*",

            // "webpack:///*": "/*" ,
            // "webpack:///./*": "${webRoot}/*"
          }
      }
  ]
}